<!-- app/views/errors/500.html.erb -->
<div class="error-500">
  <div class="error-icon"><%= image_tag 'error-icon.svg' %></div>
  <p>Internal Server Error</p>
  <p>サーバー内部でエラーが発生しました。<br>しばらくしてから再度お試しください。</p>
  <a href="/">戻る</a>
</div>

<style>
  .error-500 {
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .error-500 .error-icon {
    position: relative;
    width: 150px;
    height: 150px;
    left: 50%;
    transform: translateX(-50%);
  }

  .error-500 p {
    font-size: 1.5em; /* サイズを少し大きく調整 */
    margin-bottom: 1em; /* 見た目の調整 */
    color: gray;
  }

  .error-500 a {
    color: #007bff;
    text-decoration: none;
  }

  @media only screen and (max-width: 425px) {
    .error-500 {
      position: relative;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
    }

    .error-500 .error-icon {
      position: relative;
      width: 100px;
      height: 100px;
      left: 50%;
      transform: translateX(-50%);
    }

    .error-500 p {
      font-size: medium;
      margin-bottom: 1em; /* 見た目の調整 */
      color: gray;
    }

    .error-500 a {
      color: #007bff;
      text-decoration: none;
      font-size: medium;
    }
  }
</style>