  <div class="modal fade" id="inputPhotoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" id="selectPhoto" class="btn btn-primary">写真を選ぶ</button>
          <%= f.file_field :image, accept: "image/*", style: "display: none;", id: "photoInput" %>
