        </div>
        <div class="modal-body">
          <!-- カメラプレビュー表示エリア -->
          <video id="cameraPreview" style="width: 100%; display: none; transform: scaleX(-1);" autoplay></video>
          <!-- 写真プレビュー表示エリア -->
          <img id="preview" style="width: 100%; display: none;">
        </div>
        <div class="modal-footer">
          <button type="button" id="backButton" class="btn btn-secondary">戻る</button>
          <button type="button" id="captureButton" class="btn btn-primary" style="display: none;">撮影</button>
          <button type="submit" id="loadImage" class="btn btn-primary" style="display: none;">画像を読み込む</button>
        </div>
      </div>
    </div>
  </div>
<% end %>


